{
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/frontend/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/packages/frontend/index.html"
    }
  ]
}